			<th>Image</th>
			<th>Nom</th>
			<th>Age</th>
			<th>Sexe</th>
			<th>Force</th>
			<th>Agilité</th>
			<th>inteligence</th>

		</tr>
		{% for value in tabPersos %}
			<tr>
				<td><img src="{{asset('images/personnages/'~value.pseudo~ '.png')}}" alt=""></td>
				<td class="align-middle"><a href="{{path('afficherPersonnage',{'nom' : value.pseudo})}}">{{value.pseudo}}</a></td>
				<td class="align-middle">{{value.age}}</td>
				<td class="align-middle">
                {% if value.sexe %}
                    Homme
                    {% else %}
                        Femme
                {% endif %}
                </td>
                <td class="align-middle" >{{value.carac.force}}</td>
                <td class="align-middle">{{value.carac.agi}}</td>
                <td class="align-middle">{{value.carac.intel}}</td>
			</tr>
			{# <div>{{value.pseudo}}</div> #}
